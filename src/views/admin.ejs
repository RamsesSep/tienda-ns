<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración - NSSerigrafía</title>
    <link rel="shortcut icon" href="/img/braces.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <%- include('partials/head') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f5f7fa;
                margin: 0;
            }

            .sidebar {
                width: 250px;
                height: 100vh;
                background-color: #000000;
                color: #fff;
                position: fixed;
                padding-top: 2rem;
            }

            .sidebar img {
                display: block;
                margin: 0 auto 1rem;
                width: 100px;
            }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 2rem;
            }

            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 20px;
                display: block;
            }

            .sidebar .nav-link:hover {
                background-color: #b39f24;
            }

            .content {
                margin-left: 250px;
                padding: 2rem;
            }

            .hidden {
                display: none;
            }
        </style>
</head>

<body>
    <div class="sidebar">
        <img src="/img/logo-ng.jpeg" alt="Logo NSSerigrafía">
        <h4>Administrador</h4>
        <a href="#" class="nav-link" onclick="mostrarSeccion('pedidos')">
            <i class="bi bi-card-list"></i>
            Lista de Pedidos
        </a>
        <a href="#" class="nav-link" onclick="mostrarSeccion('clientes')">
            <i class="bi bi-people-fill"></i>
            Clientes
        </a>
        <a class="nav-link" href="/logout" title="Cerrar sesión">
            <i class="bi bi-door-closed-fill"></i>
            Cerrar Sesión
        </a>
    </div>

    <div class="content">
        <div id="pedidos">
            <h2>Lista de Pedidos</h2>
            <p>Pedidos actualies.</p>
            
            <p>Pedidos concretados</p>

        </div>

        <div id="clientes" class="hidden">
            <h2>Clientes de NSSerigrafía</h2>

            <div class="card shadow-sm p-4 mt-4">
                <h4 class="mb-4">Lista de Usuarios</h4>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Contraseña</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.password %>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash-fill"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>

    <script>
        function mostrarSeccion(id) {
            document.getElementById('pedidos').classList.add('hidden');
            document.getElementById('clientes').classList.add('hidden');
            document.getElementById(id).classList.remove('hidden');
        }
    </script>
</body>

</html>